#!/bin/sh

case $1 in
    start)
        ### Start this package.
        exit 0
    ;;
    stop)
        ### Stop this package.
        exit 0
    ;;
    log)
        echo "${SYNOPKG_PKGDEST}/package/logs/output.log"
    ;;
    status)
        ### Check package alive.
        echo 'get status of Baidunetdisk container.' >> "${SYNOPKG_PKGDEST}/package/logs/output.log"
        /usr/local/bin/docker_inspect Baidunetdisk | grep -q "\"Status\": \"running\"," || exit 1
    ;;
    *)
        echo "Usage: $0 {start|stop|status}" > &2
        exit 0
    ;;
esac

